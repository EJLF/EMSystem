@model EMSystem.ViewModel.EmployeeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create" asp-controller="Employee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Employees.Name" class="control-label"></label>
                <input asp-for="@Model.Employees.Name" class="form-control" />
                <span asp-validation-for="@Model.Employees.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employees.DOB" class="control-label"></label>
                <input asp-for="@Model.Employees.DOB" class="form-control" />
                <span asp-validation-for="@Model.Employees.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employees.Email" class="control-label"></label>
                <input asp-for="@Model.Employees.Email" class="form-control" />
                <span asp-validation-for="@Model.Employees.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employees.Phone" class="control-label"></label>
                <input asp-for="@Model.Employees.Phone" class="form-control" />
                <span asp-validation-for="@Model.Employees.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employees.DepartmentId" class="control-label"></label>
                <select asp-for="@Model.Employees.DepartmentId" class ="form-control" asp-items="@Model.ListDepartments">
                <option value="">---Select Department---</option>
                </select>
            </div>
            <div>
                </br>
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-primary" role="button" asp-action="List">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
